using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;
using Accord.MachineLearning;
using Accord.Math;
using Accord.Statistics.Kernels;


class K_MeansAlgorithm
    {

    public double[] data = new double[10];

    public void AssignDataFromPerson(double[] data)
    {
        for(int i=1; i <= 10; i++)
        {
            this.data[i] = data[i];
        }
    }

    public void Init(double[] data)
    {
        // Generate 10 random datasets
        //List<List<double[]>> datasets = GenerateRandomDatasets(10, 1000);

        // Perform KMeans clustering on each dataset
        for (int i = 1; i <= this.data.Length; i++)
        {
            //List<double[]> data = datasets[i];

            int k = 3; // Number of clusters
            Console.WriteLine($"Dataset {i + 1}");

            PerformKMeansClustering(data, k);
            Console.WriteLine();
        }
    }

    static void PerformKMeansClustering(double[] data, int k)
    {
        // Create KMeans algorithm
        KMeans kmeans = new KMeans(k);

        // Compute clusters
        int[] clusterAssignments = kmeans.Compute(data.ToArray());

        // Print cluster assignments
        for (int i = 0; i < clusterAssignments.Length; i++)
        {
            Console.WriteLine($"Data point {i + 1} belongs to cluster {clusterAssignments[i] + 1}");
        }
    }


}
